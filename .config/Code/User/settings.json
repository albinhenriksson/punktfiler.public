// settings.json
// VSCode
// 2025-03-25
{
  // Meta --------------------------------------------------------------------
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  // Fönster -----------------------------------------------------------------
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  // Arbetsbänk --------------------------------------------------------------
  "workbench.iconTheme": "file-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.list.smoothScrolling": true,
  "workbench.list.fastScrollSensitivity": 6,
"workbench.list.mouseWheelScrollSensitivity": 3,
  "editor.codeLensFontFamily": "'Ubuntu Mono'",
  "debug.console.lineHeight": 1,
  "editor.lineHeight": 1,
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "trailing",
  "editor.comments.insertSpace": false, // Inget kommentar-mellanrum.
  "editor.tokenColorCustomizations": {  // Inga fucking italienska bokstäver.
  "textMateRules": [
      {
          "scope": [
              "comment",
              "comment.block",
              "comment.block.documentation",
              "comment.line",
              "constant",
              "constant.character",
              "constant.character.escape",
              "constant.numeric",
              "constant.numeric.integer",
              "constant.numeric.float",
              "constant.numeric.hex",
              "constant.numeric.octal",
              "constant.other",
              "constant.regexp",
              "constant.rgb-value",
              "emphasis",
              "entity",
              "entity.name",
              "entity.name.class",
              "entity.name.function",
              "entity.name.method",
              "entity.name.section",
              "entity.name.selector",
              "entity.name.tag",
              "entity.name.type",
              "entity.other",
              "entity.other.attribute-name",
              "entity.other.inherited-class",
              "invalid",
              "invalid.deprecated",
              "invalid.illegal",
              "keyword",
              "keyword.control",
              "keyword.operator",
              "keyword.operator.new",
              "keyword.operator.assignment",
              "keyword.operator.arithmetic",
              "keyword.operator.logical",
              "keyword.other",
              "markup",
              "markup.bold",
              "markup.changed",
              "markup.deleted",
              "markup.heading",
              "markup.inline.raw",
              "markup.inserted",
              "markup.italic",
              "markup.list",
              "markup.list.numbered",
              "markup.list.unnumbered",
              "markup.other",
              "markup.quote",
              "markup.raw",
              "markup.underline",
              "markup.underline.link",
              "meta",
              "meta.block",
              "meta.cast",
              "meta.class",
              "meta.function",
              "meta.function-call",
              "meta.preprocessor",
              "meta.return-type",
              "meta.selector",
              "meta.tag",
              "meta.type.annotation",
              "meta.type",
              "punctuation.definition.string.begin",
              "punctuation.definition.string.end",
              "punctuation.separator",
              "punctuation.separator.continuation",
              "punctuation.terminator",
              "storage",
              "storage.modifier",
              "storage.type",
              "string",
              "string.interpolated",
              "string.other",
              "string.quoted",
              "string.quoted.double",
              "string.quoted.other",
              "string.quoted.single",
              "string.quoted.triple",
              "string.regexp",
              "string.unquoted",
              "strong",
              "support",
              "support.class",
              "support.constant",
              "support.function",
              "support.other",
              "support.type",
              "support.type.property-name",
              "support.variable",
              "variable",
              "variable.language",
              "variable.name",
              "variable.other",
              "variable.other.readwrite",
              "variable.parameter"
          ],
          "settings": {
              "fontStyle": ""
          }
      }
  ]
},
"editor.minimap.enabled": false,
//"editor.rulers": [
  //    {
      //        "column":80,
      //        "color": "#AD7FA8"
      //    },
      //],
      "editor.smoothScrolling": true,
      "editor.mouseWheelScrollSensitivity": 3,
      "editor.fastScrollSensitivity": 6,
      "editor.scrollbar.vertical": "visible",
      "editor.scrollbar.horizontal": "visible",
      // Terminal ------------------------------------------------------------
      "terminal.integrated.fontFamily": "'Ubuntu Mono'",
      "terminal.integrated.mouseWheelScrollSensitivity": 3,
      "terminal.integrated.fastScrollSensitivity": 6,
      // Avlusning -----------------------------------------------------------
      "debug.console.fontFamily": "'Ubuntu Mono'",
      "security.workspace.trust.untrustedFiles": "open",
      "git.enableSmartCommit": true,
    "git.autofetch": true,
    "window.controlsStyle": "custom",
    "shellformat.path": "/usr/bin/shfmt",
    "shellcheck.executablePath": "/usr/bin/shellcheck",
    "remote.SSH.configFile": "/home/albin/.ssh/config",
    "workbench.colorTheme": "Kimbie Dark",
    "[home-assistant]": {
        "editor.defaultFormatter": "numso.prettier-standard-vscode"
    },
    "workbench.colorCustomizations": {},
    "cSpell.enabled": false,

}